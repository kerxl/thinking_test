# Production configuration for Mind Style Bot

# Telegram Bot Token (получить у @BotFather)
BOT_TOKEN=your_production_bot_token_here

# База данных (PostgreSQL для production)
DATABASE_URL=postgresql+asyncpg://mindbot:your_secure_production_password@localhost/mind_style

# Общие настройки
DEBUG=False
ADMIN_USER_ID=your_admin_telegram_id

# API сервер для Senler
API_HOST=0.0.0.0
API_PORT=8000
WEBHOOK_URL=https://your-production-domain.com/senler/webhook

# Безопасность
# Рекомендуется установить эти переменные для production
ALLOWED_HOSTS=your-production-domain.com,localhost
SECRET_KEY=your_very_long_random_secret_key_here

# Логирование
LOG_LEVEL=INFO
LOG_FILE=/var/log/mindbot/app.log

# Senler интеграция
SENLER_TIMEOUT=30
MAX_WEBHOOK_RETRIES=3